ALGORITHM read_sentence

VAR
    words, voyelles, charac : INTEGER := 0 ;
    sent := STRING[] ;

BEGIN

    write("Write the sentence")
    read(sent)

    REPEAT

      IF (sent[charac] = " ") THEN
      words := words + 1 ;
      END_IF

      IF (sent[charac] = ("a"||"e"||"u"||"i"||"o")) THEN
         voyelles := voyelles + 1;
      END_IF

      charac = charac + 1;
      
    UNTIL (sent[charac] = ".")
      
END

